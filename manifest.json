{
  "manifest_version": 3,
  "name": "Mindful Timer",
  "version": "1.0",
  "description": "A minimal, meditative timer for focused work",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["alarms", "notifications", "storage"],
  
  "background": {
      "service_worker": "background.js"
    }

}